{
  "name": "@icazemier/gibbons",
  "private": false,
  "version": "5.0.1",
  "description": "Gibbons is a Node.js module which helps in managing user groups and user permissions with `bitwise` effiency.",
  "contributors": [
    {
      "name": "Ivo Cazemier",
      "email": "git@warmemelk.nl",
      "url": "https://github.com/icazemier"
    }
  ],
  "keywords": [
    "user permissions",
    "user groups",
    "bitwise"
  ],
  "files": [
    "build/"
  ],
  "main": "./build/cjs/index.js",
  "module": "./build/esm/index.js",
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js"
    }
  },
  "types": "./build/esm/index.d.ts",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "scripts": {
    "test": "cross-env NODE_ENV=test c8 ava",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig-cjs.json",
    "build": "rimraf build && npm run build:esm && npm run build:cjs && node ./fixup.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepublishOnly": "npm run lint",
    "prepublish": "npm run build",
    "docs": "typedoc --out docs src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/icazemier/gibbons"
  },
  "homepage": "https://icazemier.github.io/gibbons/",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "ava": "^3.15.0",
    "c8": "^7.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.2.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.7",
    "typescript": "^4.4.4"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ],
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "verbose": true
  }
}
