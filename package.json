{
  "name": "gibbons",
  "private": false,
  "version": "2.2.4",
  "description": "Gibbons is a Node.js module which helps in managing user groups and user permissions with `bitwise` effiency.",
  "contributors": [
    {
      "name": "Ivo Cazemier",
      "email": "n-pm@flashinnovations.nl",
      "url": "http://flashinnovations.nl/"
    }
  ],
  "keywords": [
    "user permissions",
    "user groups",
    "bitwise"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=6.0 <=10.3.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "docs": "jsdoc --readme README.md lib -r -c config/jsdocs.json",
    "prepush": "eslint lib/ && nyc mocha --timeout=1000",
    "lint": "eslint lib/",
    "test": "nyc mocha --timeout=1000"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaasdude/gibbons"
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "async": "2.6.1",
    "chai": "4.1.2",
    "coveralls": "3.0.1",
    "eslint": "4.19.1",
    "eslint-plugin-node": "6.0.1",
    "husky": "0.14.3",
    "jsdoc": "3.5.5",
    "lodash": "4.17.10",
    "lokijs": "1.5.5",
    "mocha": "5.2.0",
    "nyc": "12.0.2"
  },
  "nyc": {
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "include": [
      "lib/**/*.js"
    ],
    "reporter": [
      "html",
      "text-summary",
      "lcov"
    ],
    "cache": true,
    "all": true,
    "report-dir": "./docs/coverage"
  }
}
