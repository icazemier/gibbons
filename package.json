{
    "name": "@icazemier/gibbons",
    "type": "module",
    "private": false,
    "version": "5.0.0-rc1",
    "description": "Gibbons is a Node.js module which helps in managing user groups and user permissions with `bitwise` effiency.",
    "contributors": [
        {
            "name": "Ivo Cazemier",
            "email": "git@warmemelk.nl",
            "url": "https://github.com/icazemier"
        }
    ],
    "keywords": [
        "user permissions",
        "user groups",
        "bitwise"
    ],
    "exports": {
        ".": {
            "import": "./src/index.mjs"
        }
    },
    "engines": {
        "node": ">=14.17.0"
    },
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "scripts": {
        "coverage": "c8",
        "docs": "jsdoc --readme README.md src -r -c jsdocs.json",
        "lint": "eslint --fix --ext .mjs src",
        "test": "cross-env NODE_ENV=test c8 mocha"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/icazemier/gibbons"
    },
    "publishConfig": {
        "access": "public",
        "pkgRoot": "build"
    },
    "license": "MIT",
    "devDependencies": {
        "@semantic-release/changelog": "5.0.1",
        "@semantic-release/git": "9.0.0",
        "c8": "^7.8.0",
        "chai": "4.3.4",
        "commitizen": "4.2.4",
        "cross-env": "7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-node": "11.1.0",
        "jsdoc": "3.6.7",
        "lodash": "4.17.21",
        "lokijs": "1.5.12",
        "mocha": "9.0.3",
        "semantic-release": "17.4.5"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
