{
  "name": "@icazemier/gibbons",
  "type": "module",
  "private": false,
  "version": "5.0.4",
  "description": "Gibbons is a Node.js module which helps in managing user groups and user permissions with `bitwise` efficiency.",
  "contributors": [
    {
      "name": "Ivo Cazemier",
      "email": "git@warmemelk.nl",
      "url": "https://github.com/icazemier"
    }
  ],
  "keywords": [
    "user permissions",
    "user groups",
    "bitwise"
  ],
  "files": [
    "build/",
    "README.md",
    "LICENSE"
  ],
  "main": "./build/cjs/index.js",
  "module": "./build/esm/index.js",
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js"
    }
  },
  "types": "./build/esm/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "scripts": {
    "test": "cross-env NODE_ENV=test vitest run --coverage",
    "build:esm": "tsc -p tsconfig-build-esm.json",
    "build:cjs": "tsc -p tsconfig-build-cjs.json",
    "build": "rimraf build && npm run build:esm && npm run build:cjs && npm run fixup",
    "fixup": "node ./fixup.mjs",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepublishOnly": "npm run lint",
    "prepublish": "npm run build",
    "docs": "typedoc --out docs src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/icazemier/gibbons"
  },
  "homepage": "https://icazemier.github.io/gibbons/",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/npm": "^13.1.4",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^22.15.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.26.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^25.0.3",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vitest": "^4.0.18"
  }
}
